<script>
  const form = document.querySelector('form');
  const btnScan = document.querySelector('.btnScan');

  var scanner;

  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    scanner = new Html5QrcodeScanner('reader', {
      qrbox: {
        width: 250,
        height: 250,
      },
      fps: 20,
    });
    scanner.render(success, error);

  });

  async function submitScanResult(userId, scoreId) {
    console.log("submitScanResult: userId=" + userId + ", scoreId=" + scoreId);
    try {
      const res = await fetch('/checkout', {
        method: 'POST',
        body: JSON.stringify({
          userId,
          scoreId
        }),
        headers: {
          'Content-Type': 'application/json'
        }
      });
      const data = await res.json();
      console.log(data);
      if (data.errors) {
        //   emailError.textContent = data.errors.email;
        //   passwordError.textContent = data.errors.password;
      }
      if (data.checkoutUser) {}
      if (data.checkoutScore) {}

    } catch (err) {
      console.log(err);
    }

  }

  async function success(result) {
    console.log(result);
    if (btnScan.textContent == "User scannen") {
      scanner.clear();
      console.log("submit user");
      await submitScanResult(result, undefined);
      btnScan.textContent = "Noten scannen";
    } else if (btnScan.textContent == "Noten scannen") {
      scanner.clear();
      document.getElementById('reader').remove();
      await submitScanResult("6489edc05376f9a7898dc898", result);
      btnScan.textContent = "Ausleihe durchf√ºhren";
    }
  }

  function error(err) {
    console.error(err);
  }

</script>