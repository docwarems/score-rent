<%- include('partials/header'); -%>

<h1><%= t('app.name') %></h1>

<% if (typeof status != 'undefined') { %>
<div class="w3-container w3-border w3-large">
  <div class="w3-left-align">
    <p>user=<%= status %></p>
  </div>
</div>
<% } %>

<ul class="w3-ul w3-border">
  <% if (user.isAdmin) { %>
    <h3><%= t('scores') %></h3>
    <li><a href="/admin/register" class="w3-button w3-black"><%= t('scores.register') %></a></li>
    <li><a href="/admin/checkout" class="w3-button w3-black"><%= t('score.checkout') %></a></li>
    <li><a href="/admin/checkin" class="w3-button w3-black"><%= t('score.checkin') %></a></li>
    <li><a href="/admin/checkouts" class="w3-button w3-black"><%= t('checkouts.show') %></a></li>
    <li><a href="/admin/history" class="w3-button w3-black"><%= t('score.history') %></a></li>
    <h3><%= t('user') %></h3>
    <li><a href="/signup-user" class="w3-button w3-black"><%= t('user.register') %></a></li>
    <li><a href="/admin/users" class="w3-button w3-black"><%= t('user.list') %></a></li>
    <% if (process.env.STAGE !== 'prod') { %>
      <li><a href="/admin/vue-test" class="w3-button w3-red">Vue test</a></li>
      <li><a href="/admin/checkouts-vue" class="w3-button w3-red">Checkouts(Vue)</a></li>
      <li><a href="/admin/users-vue" class="w3-button w3-red">Users(Vue)</a></li>
      <li><a href="/admin/register-score-vue" class="w3-button w3-red">Register score(Vue)</a></li>
    <% } %>
  <% } else { %>
    <li><a href="/user/checkouts" class="w3-button w3-black"><%= t('checkouts.show') %></a></li>
    <li><a href="#" onClick="document.querySelector('.divQrCode').style='display: block'" class="w3-button w3-black"><%= t('login.show.qrcode') %></a></li>
  <% } %>
</ul>

<% if (!user.isAdmin) { %>
<div class="divQrCode" style="display: none">
  <img src="<%= qrCodeDataUrl %>" style="width:100%;max-width:300px">
</div>
<% } %>

<%- include('partials/footer'); -%>